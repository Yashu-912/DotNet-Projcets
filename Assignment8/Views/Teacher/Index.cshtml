@model IEnumerable<Assignment8.Models.Teacher>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Teacher List</h2>
        </div>
        <div style="margin-top: 50px;">
        <form asp-controller="Teacher" asp-action="Index">
        <div>
            <label>Teacher Name : </label>
            <input type="text" name="SearchString" style="border-radius: 5px; height:40px"/>
            <input class="btn btn-primary" type="submit" value="Filter">
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Refresh</a>
        </div>
        </form>
        </div>
        <div style="diaplay:flex">
            <div style="position:relative; float: right;">
                <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">Add a new Teacher</a>
            </div>
        </div>
    </div>
    <br />
    @if (Model!.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%; text-align: center;">
            <thead>
                <tr>
                    <th>Teacher ID</th>
                    <th>Teacher Name</th>
                    <th>Subject taught</th>
                    <th>Change Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj1 in Model!)
                {
                    <tr >
                        <td  width="15%" >@obj1.Teacher_ID</td>
                        <td>@obj1.Teacher_Name</td>
                        <td>@obj1.Subject</td>
                        <td width="15%">
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-teacherid="@obj1.Teacher_ID"
                        class="btn btn-primary">Edit</a>
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-teacherid="@obj1.Teacher_ID"
                        class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No details.</p>
    }
</div>
